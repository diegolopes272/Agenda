<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Entry your credentials or create a new account</p>
      
      <%- include('includes/messages'); %>

      <div class="row">
        <div class="col-lg">
          Create new account
          <form class="form-register" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Your email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Your password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Create it!</button>
          </form>
        </div>
        
        
        <div class="col-lg">
          Login
          <p> Already have an account? Please entry below </p>
          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Your email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Your password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Entry</button>
          </form>          
        </div>
      </div>
    
      
    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
